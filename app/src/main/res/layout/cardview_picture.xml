<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pictureCard"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_cardview"
    cardview:cardCornerRadius="@dimen/cornerradius_cardview">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
       <ImageView
           android:id="@+id/pictureCard_Map"
           android:layout_width="match_parent"
           android:layout_height="@dimen/height_cardview"
           android:background="@drawable/google_maps"
           android:scaleType="centerCrop"
           />
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="bottom"
            android:paddingLeft="@dimen/text_cardview"
            android:paddingBottom="@dimen/text_cardview"
            android:background="@color/backgroud_textCard">

            <TextView
                android:id="@+id/maps_title_cardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_map"
                android:textColor="@android:color/white"
                android:textSize="@dimen/textSize_maps"/>

            <TextView
                android:id="@+id/description_cardview_maps"
                android:layout_marginTop="@dimen/margintop_cardview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/description_card_maps"
                android:textColor="@android:color/white"
                android:textSize="@dimen/textSize_description"/>




        </LinearLayout>
    </FrameLayout>
    




</android.support.v7.widget.CardView>